@{
    ViewData["Title"] = "Home Page";
}

@model List<BSIT_Pauly.BusLogic.Models.tblStudentt>

<main class="tablecenter">
    <div class="table__overflow">
        <section class="table__header">
            <h1>Student Information</h1>
            <a class="btn btn-primary m-2" href="/Home/AddNewStudent">Add New Student</a>
        </section>
        <section class="table__body">
            <table id="student-table" class="table table-striped table-bordered" width="100%">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Student Name</th>
                        <th>Age</th>
                        <th>Course</th>
                        <th>Gender</th>
                        <th>Birthday</th>
                        <th>Address</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var student in Model)
                    {
                        <tr>
                            <td>@student.Id</td>
                            <td>@student.StudentName</td>
                            <td>@student.Age</td>
                            <td>@student.Course</td>
                            <td>@student.Gender</td>
                            <td>@student.Birthday</td>
                            <td>@student.Address</td>
                            <td>
                                <a href="/Student/EditStudent/@student.Id" class="btn btn-sm btn-warning">Edit</a>
                                <button class="btn btn-sm btn-danger" onclick="deleteStudent(@student.Id)">Delete</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </section>
    </div>
</main>